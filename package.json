{
  "name": "rpncalc",
  "version": "1.0.0",
  "description": "RPN Calculator",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint --ext .ts --ext .js src tests",
    "prepublish": "npm build",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeferner/node-rpncalc.git"
  },
  "keywords": [
    "rpn",
    "calc",
    "calculator",
    "cli"
  ],
  "author": "Joe Ferner <joe@fernsroth.com>",
  "license": "MIT",
  "bin": {
    "rpncalc": "dist/index.js"
  },
  "bugs": {
    "url": "https://github.com/joeferner/node-rpncalc/issues"
  },
  "homepage": "https://github.com/joeferner/node-rpncalc#readme",
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@types/yargs": "^17.0.2",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "typescript-eslint-parser": "^22.0.0"
  },
  "dependencies": {
    "yargs": "^17.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote=true --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
